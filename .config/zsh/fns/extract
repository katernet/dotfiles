# Extract archives
extract(){
	if [[ -z "$1" ]] ; then
		print "Extract an archive based on the file extension."
		print "Supported archives: zip,7z,Z,bz2,gz,rar,jar,tar,tarballs"
		print -P "Usage: %F{green}(ext)tract%f [<file>]"
		print " file  Filename of archive"
	elif [[ -f $1 ]] ; then
		case ${(L)1} in
			*.tar.xz)   tar -Jxf $1		;;
			*.tar.bz2)  tar -jxvf $1	;;
			*.tar.gz)   tar -zxvf $1	;;
			*.bz2)      bunzip2 $1		;;
			*.gz)       gunzip $1		;;
			*.jar)      unzip $1		;;
			*.rar)      unrar x $1		;;
			*.tar)      tar -xvf $1		;;
			*.tbz2)     tar -jxvf $1	;;
			*.tgz)      tar -zxvf $1	;;
			*.zip)      unzip $1		;;
			*.Z)        uncompress $1	;;
			*.7z)       7za e $1		;;
			*)          echo "Unable to extract '$1' :: Unknown extension"
		esac
	else
		echo "File ('$1') does not exist!"
	fi
}
